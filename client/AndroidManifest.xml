<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cloudteammanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ctm_icon_100"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cloudteammanager.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cloudteammanager.ManagementMenuActivity"
            android:label="@string/title_management_menu" >
        </activity>
        <activity
            android:name="com.cloudteammanager.CalendarManagementActivity"
            android:label="@string/title_activity_calendar_management" >
        </activity>
        <activity
            android:name="com.cloudteammanager.TeamsManagementActivity"
            android:label="@string/title_activity_projects_management" >
        </activity>
        <activity
            android:name="com.cloudteammanager.CreateAccountActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name="com.cloudteammanager.TeamActivity"
            android:label="@string/title_activity_team" >
        </activity>
        <activity
            android:name="com.cloudteammanager.CreateTaskActivity"
            android:label="@string/title_activity_create_task" >
        </activity>
        <activity
            android:name="com.cloudteammanager.CreateEventActivity"
            android:label="@string/title_activity_create_event" >
        </activity>
    </application>

</manifest>
